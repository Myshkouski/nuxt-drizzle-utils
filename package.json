{
  "name": "@nuxt-drizzle/utils",
  "version": "0.0.8",
  "description": "Configuration utilities and runtime helpers for Drizzle ORM in Nuxt/Nitro applications.",
  "license": "MIT",
  "author": "Alexei Myshkouski",
  "repository": {
    "type": "git",
    "url": "https://github.com/Myshkouski/nuxt-drizzle-utils"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "scripts": {
    "build": "tsdown"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
